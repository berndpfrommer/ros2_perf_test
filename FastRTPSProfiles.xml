<?xml version="1.0" encoding="UTF-8" ?>
<profiles
    xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
  <transport_descriptors>
    <transport_descriptor>
      <transport_id>nonblocking_tcp_transport</transport_id>
      <type>TCPv4</type>
      <maxMessageSize>10000</maxMessageSize>
      <sendBufferSize>92160</sendBufferSize>
      <listening_ports>
        <port>7400</port>
      </listening_ports>
      <wan_addr>10.42.0.135</wan_addr>
    </transport_descriptor>
  </transport_descriptors>
  <participant profile_name="participant profile" is_default_profile="true">
    <rtps>
      <userTransports>
        <transport_id>nonblocking_tcp_transport</transport_id>
      </userTransports>
      <useBuiltinTransports>false</useBuiltinTransports>
      <builtin>
        <discovery_config>
          <discoveryProtocol>SERVER</discoveryProtocol>
          <leaseAnnouncement><sec>1</sec><nanosec>0</nanosec></leaseAnnouncement>
          <leaseDuration><sec>3</sec><nanosec>0</nanosec></leaseDuration>
	  <clientAnnouncementPeriod>
	    <nanosec>250000000</nanosec>
	  </clientAnnouncementPeriod>
        </discovery_config>
        <metatrafficUnicastLocatorList>
          <locator>
            <tcpv4>
              <address>10.42.0.135</address>
              <physical_port>27811</physical_port>
              <port>6339</port>
            </tcpv4>
          </locator>
        </metatrafficUnicastLocatorList>
      </builtin>
    </rtps>
  </participant>
  <publisher profile_name="noblocking publisher" is_default_profile="true">
    <qos>
      <publishMode>
        <kind>ASYNCHRONOUS</kind>
      </publishMode>
      <reliability>
        <kind>RELIABLE</kind>
	<!--
        <max_blocking_time>
          <sec>0.01</sec>
        </max_blocking_time>
	-->
      </reliability>
    </qos>
    <historyMemoryPolicy>PREALLOCATED_WITH_REALLOC</historyMemoryPolicy>
    <!--
     <throughputController>
       <bytesPerPeriod>5000000</bytesPerPeriod>
       <periodMillisecs>1000</periodMillisecs>
     </throughputController>
    -->
  </publisher>
  <!-- default subscriber profile -->
  <subscriber profile_name="nonblocking subscriber" is_default_profile="true">
    <historyMemoryPolicy>PREALLOCATED_WITH_REALLOC</historyMemoryPolicy>
  </subscriber>

 </profiles>
